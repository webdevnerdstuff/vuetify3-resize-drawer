{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": false,
		"importHelpers": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"baseUrl": ".",
		"outDir": "./dist",
		"rootDir": "src",
		"lib": [
			"ESNext",
			"DOM"
		],
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./ts"
		],
		"skipLibCheck": true,
		"useDefineForClassFields": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"noEmit": true
	},
	"types": [
		"lodash",
		"node"
	],
	"include": [
		"src/**/*.ts",
		"src/**/*.vue"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
