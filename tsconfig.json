{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"declaration": true,
		"declarationDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"jsx": "preserve",
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"plugins": [
			{
				"transform": "transformer-module"
			}
		],
		"resolveJsonModule": true,
		"rootDir": "src",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"typeRoots": [
			"./src/plugin/types",
			"./node_modules/@types",
			"./node_modules/vuetify/types"
		],
		"useDefineForClassFields": true
	},
	"exclude": [
		"src/App.vue",
		"src/main.ts",
		"src/layout/**/*.ts",
		"src/layout/**/*.vue",
		"src/components/**/*.ts",
		"src/components/**/*.vue",
		"src/plugins/**/*.ts",
		"node_modules"
	],
	"include": [
		"src/types/**/*.ts",
		"src/types/**/*.d.ts",
		"src/plugin/**/*.ts",
		"src/plugin/**/*.vue"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
